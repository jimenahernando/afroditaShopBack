	.page-buttons.mb-4
		if page !== 1
			a.button.mr-1(href="?page=" + (page-1)) Anterior
		else 
			a.button.mr-1(disabled) Anterior
		
		if products.length < 5
			a.button.mr-1(disabled) Siguiente
		else
